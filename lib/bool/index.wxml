<view class="mini-bool mini-class">
    <view class="bool-view">
        <view class="form-name">{{item.name}}</view>
        <view class="bool-view__value">
            {{valueView}}
        </view>
        <!--        <view class="bool-view__action">-->
        <!--            选择-->
        <!--        </view>-->
    </view>
    <radio-group wx:if="{{!disabled}}" class="bool-edit" bind:change="onChanged">
        <radio wx:for="{{item.choices}}"
               wx:key="value"
               wx:for-item="choice"
               class="bool-radio"
               checked="{{choice.value === item.value}}"
               value="{{choice.value}}">
            <view class="bool-radio__value">{{choice.text}}</view>
        </radio>
    </radio-group>
    <view></view>
</view>